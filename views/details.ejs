<!-- views/details.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weekly Summary</title>
    <link rel="stylesheet" href="/css/details.css">
</head>

<body>
    <!-- Heading -->
    <div id="heading">
        <h1><span><i class="fa fa-chevron-left"></i></span></h1>
        <h1>Weekly Summary</h1>
        <h1><span><i class="fa fa-chevron-right"></i></span></h1>
    </div>

    <div id="box">
        <div>
            <!-- Week days list -->
            <ul class="week-days" id="weekname">
                <li class="list-group-item day-name"><strong>Today/29</strong></li>
                <li class="list-group-item day-name">TUE/30</li>
                <li class="list-group-item day-name">WED/31</li>
                <li class="list-group-item day-name">THUR/1</li>
                <li class="list-group-item day-name">FRI/2</li>
                <li class="list-group-item day-name">SAT/3</li>
                <li class="list-group-item day-name">SUN/4</li>
            </ul>

            <!-- Habit list -->
            <ul class="list-group" id="habits">
                <% for(let i of habit_list){ %>
                    <li class="list-group-item list-group-item-info habit">
                        <div class="row habit-streak">
                            <span id="habit-name"><h4><%= i.habit %></h4> </span>
                            <% if(i.end!=""){ %>
                                <p class="col-lg-3">Ending on : <%=i.end%></p>
                            <% } else { %>
                                <p class="col-lg-3">Building this forever</p>
                            <% } %>
                            <p class="col-lg-3">Streak : <%=i.streak%>/7</p>
                            <p class="col-lg-3"> <%=i.time%> <%=i.frequency%></p>
                        </div>

                        <!-- Week days record list -->
                        <ul class="week-days">
                            <% for(let day of ['one', 'two', 'three', 'four', 'five', 'six', 'seven']){ %>
                                <form action="/details/update-habit/?id=<%=i._id%>&day=<%=day%>&val=<%=i.days[day]%>" method="POST">
                                    <button class="list-group-item days" type="submit"><%=i.days[day]%></button>
                                </form>
                            <% } %>
                        </ul>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>

    <script type="text/javascript" src="/js/details.js"></script>
</body>

</html>
